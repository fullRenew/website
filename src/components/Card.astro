---
interface Props {
	title: string;
    description: string;
    image: string;
}

const { title, description, image } = Astro.props;
---
<article class="w-full flex flex-col rounded-lg overflow-hidden border border-neutral-800 hover:shadow-neutral-700 hover:shadow-md transition-all">
    <img class="w-full h-auto aspect-video" src={image} alt="">
    <span class="flex flex-col p-4">
        <h3 class="font-semibold text-lg md:text-2xl text-white">{title}</h3>
        <p class="text-neutral-300 text-sm md:text-base">{description}</p>
    </span>
</article>